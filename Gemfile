source "https://rubygems.org"

# Sing along.
gem "sinatra"
# Use SQLite as the database engine.
gem "sqlite3"
# Use Sequel as the ORM.
gem "sequel"
# Use Haml as the templating system.
gem "haml"
# Use Carrierwave to upload files.
gem "carrierwave"
gem "carrierwave-sequel", :require => 'carrierwave/sequel'
# Use RMagick to process images (we need to have ImageMagick installed).
gem "rmagick"