.header-margin
  .text-center
    %h1 Simple Image Gallery

.row
  #links
    %ul.grid.list-unstyled
      - @images.each do |image|
        %li.grid-item.col-md-4
          .margin-bottom-30
            %a(href= "#{image.file}" data-gallery)
              %img{src: image.file.url(:small), class: "img-responsive"}
            - if loggedin?
              %a{href: "/images/#{image.id}/edit"}
                %button(class="edit-del-button")
                  Edit
              %a{href: "/images/#{image.id}/delete-confirmation"}             
                %button(class="edit-del-button")
                  Delete

- if loggedin? 
  .upload-margin
    %h1 Upload new image

    %form(action="/images" method="post" enctype="multipart/form-data")
      %p
        %input(type="file" name="image[file]" id="file")

      %p
        %input(type="text" name="image[title]" class="form-control" placeholder="Enter a title for the image.")

      %p
        %button(class="btn btn-primary") Upload!