.row
  .col-xs-12
    #links
      %a(href="#{@image.file}" title="#{@image.title}" data-image-id="#{@image.id}" data-gallery)
        %img(src="#{@image.file}" alt="#{@image.title}" id="image-big" class="img-responsive center-block")

.row
  .col-xs-12.text-center.margin-top-bottom
    %h2= @image.title

%nav(aria-label="...")
  %ul.pager
    %li
      %a(href="/")
        %span(aria-hidden="true") &larr;
        Gallery

.footer-spacing

/ Blueimp's Image Gallery lightbox
#blueimp-gallery.blueimp-gallery.blueimp-gallery-controls
  / Controls for the borderless lightbox
  %a.close.btn.btn-default.btn-close
    %span.glyphicon.glyphicon-remove
  %a(href="/" class="btn btn-default btn-gallery" id="gallery-button")
    %span(aria-hidden="true") &larr;
    Gallery
  %button(type="button" class="btn btn-default btn-share" id="share-button" data-toggle="modal" data-target="#modal-share") Share
  / Show slides
  .slides