!!!
%html
  %head
    %meta(charset="utf-8")
    / Bootstrap
    %link(rel="stylesheet" href="/css/bootstrap.min.css")
    / My stylesheet
    %link(rel="stylesheet" href="/css/style.css")
    / Blueimp's Bootstrap Image Gallery
    %link(rel="stylesheet" href="/css/blueimp-gallery.min.css")
    %link(rel="stylesheet" href="/css/bootstrap-image-gallery.min.css")

  %body
    .container
      = yield

    / The Bootstrap Image Gallery lightbox
    #blueimp-gallery.blueimp-gallery.blueimp-gallery-controls
      .slides
      / Controls for the borderless lightbox
      %h3.title
      %a.prev ‹
      %a.next ›
      %a.close ×
      %a.play-pause
      %ol.indicator
      / The modal dialog, which will be used to wrap the lightbox content
      .modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              %button(type="button" class="close" aria-hidden="true") &times;
              %h4.modal-title
            .modal-body.next
            .modal-footer
              %button(type="button" class="btn btn-default pull-left prev")
                %i.glyphicon.glyphicon-chevron-left
                Previous
              %button(type="button" class="btn btn-primary next")
                Next
                %i.glyphicon.glyphicon-chevron-right

    / jQuery
    %script(src="/js/jquery-3.1.0.min.js")
    / jQuery code to make the modals work properly
    %script(src="/js/images.js")
    / Bootstrap
    %script(src="/js/bootstrap.min.js")
    / Masonry
    %script(src="/js/masonry.pkgd.min.js")
    %script(src="/js/imagesloaded.pkgd.min.js")
    :javascript
      $(document).ready(function() {
        var $grid = $('.grid').imagesLoaded(function() {
          // Init Masonry after all images have loaded.
          $grid.masonry({
            itemSelector:   '.grid-item',
            columnWidth:    '.grid-item',
            percentPosition: true
          });
        });
      });
    / Blueimp's Bootstrap Image Gallery
    %script(src="/js/jquery.blueimp-gallery.min.js")
    / %script(src="/js/bootstrap-image-gallery.min.js")